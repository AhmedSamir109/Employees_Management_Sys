@model RoleViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h1 class="text-center my-4"> Edit @Model.RoleName </h1>

<section class="row justify-content-center align-items-center my-3">

    <form class="col-sm-6 border border-1 rounded-3 p-4" asp-controller="Role" asp-action="Edit">


        <div class="form-group mb-3">
            <label class="form-label" asp-for="RoleName"></label>
            <input asp-for="RoleName" class="form-control" />
        </div>


   
        @Html.AntiForgeryToken()

        <input type="submit" value="Save" class="btn btn-success" />
        <a asp-action="Index" class="btn btn-outline-primary">Back To list</a>

    </form>

</section>