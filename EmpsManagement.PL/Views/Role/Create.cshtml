@model RoleViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row justify-content-center align-content-center my-3">
    <h1 class="col-8 my-4">Create New Role</h1>

    <form method="post" asp-controller="Role" asp-action="Create" class="row col-8 border border-1 rounded-2 shadow-sm px-3 py-5" enctype="multipart/form-data">

        <div asp-validation-summary="ModelOnly"></div>

        <div class="form-group mb-3 col-12">
            <label class="form-label" asp-for="RoleName"></label>
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>

        <div class="mt-4 m-auto">
            <input class="btn btn-primary" type="submit" value="Save" />
            <a asp-controller="Role" asp-action="Index" class="btn btn-outline-primary">Back to list</a>
        </div>

    </form>
</div>





@section ValidationScript {

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>

}

