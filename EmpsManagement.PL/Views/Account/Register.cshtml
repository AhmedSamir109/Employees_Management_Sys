@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "AuthLayout";
}

<div class="main-w3layouts wrapper rounded-3">

	<h1>SignUp Form</h1>
	<div class="main-agileinfo">
		<div class="agileits-top">
			<form asp-action="Register" asp-controller="Account"  method="post">
				
			<div asp-validation-summary="ModelOnly" class="text-center mb-4"> </div>

				<input asp-for="FirstName" placeholder="First Name" >
                <span asp-validation-for="FirstName" class="text-light mb-4"></span>
				<br />

				<input asp-for="LastName" placeholder="Last Name">
				<span asp-validation-for="LastName" class="text-light mb-4"></span>
				<br />
				
				<input asp-for="UserName" placeholder="User Name">
				<span asp-validation-for="UserName" class="text-light mb-4"></span>
				<br />

				<input asp-for="Email" placeholder="Email">
				<span asp-validation-for="Email" class="text-light mb-4"></span>
				<br />

				<input asp-for="Password" placeholder="Password">
				<span asp-validation-for="Password" class="text-light mb-4"></span>
				<br />

				<input asp-for="ConfirmPassword" placeholder="Confirm Password">
				<span asp-validation-for="ConfirmPassword" class="text-light mb-4"></span>
				<br />

				<div class="wthree-text">
					<label class="anim">
						<input asp-for="IsAgree" class="checkbox" >
						<span>I Agree To The Terms & Conditions</span>
					</label>
					<div class="clear"> </div>
				</div>
				<input type="submit" value="SIGNUP">
			</form>
			<p>You have an Account? <a asp-controller="Account" asp-action="Login"> Login Now</a></p>

		</div>
	</div>

</div>

